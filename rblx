--// Rayfield Loader (customizable URL)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

--// Customizable Window Name
local WindowName = "My Custom Roblox Hub" -- Change this to your desired window name

--// Create Window with customizable name
local Window = Rayfield:CreateWindow({
   Name = WindowName,  -- Set the window name
   Icon = 0,            -- Set the window icon (0 = no icon)
   LoadingTitle = "Loading Hub...",
   LoadingSubtitle = "by siinject",
   Theme = "Default",   -- Choose your theme
   ShowText = "Rayfield", -- Mobile users can toggle Rayfield UI using "Rayfield" text
   ToggleUIKeybind = "K", -- Key to toggle UI visibility (press K to show/hide)

   ConfigurationSaving = {
      Enabled = true,
      FolderName = "MyHub", -- Folder for config files
      FileName = "Config"   -- Config file name
   },

   Discord = {
      Enabled = true,
      Invite = "yourdiscordlink", -- Set your Discord invite link here
      RememberJoins = true
   },

   KeySystem = false -- Set to true if you want a key system
})

--// Create Tabs
local MainTab = Window:CreateTab("Main", 4483362458)  -- Tab for general features
local SettingsTab = Window:CreateTab("Settings", 4483362458)  -- Settings tab

--// Create Sections
local MainSection = MainTab:CreateSection("Main Features")
local SettingsSection = SettingsTab:CreateSection("Adjust Settings")

--// Button Example
MainTab:CreateButton({
   Name = "Open Feature",
   Callback = function()
      Rayfield:Notify({
         Title = "Feature Opened",
         Content = "You have opened a feature!",
         Duration = 4,
         Image = 4483362458
      })
   end,
})

--// Toggle Example
MainTab:CreateToggle({
   Name = "Enable Auto-Farm",
   CurrentValue = false,
   Flag = "AutoFarmToggle",
   Callback = function(Value)
      if Value then
         print("Auto-Farm Enabled")
         Rayfield:Notify({
            Title = "Auto-Farm Enabled",
            Content = "Auto-farming is now active!",
            Duration = 4
         })
      else
         print("Auto-Farm Disabled")
         Rayfield:Notify({
            Title = "Auto-Farm Disabled",
            Content = "Auto-farming is now inactive.",
            Duration = 4
         })
      end
   end,
})

--// Slider Example
MainTab:CreateSlider({
   Name = "Speed Adjustment",
   Range = {1, 100},  -- Min and Max range values
   Increment = 1,     -- Increment step (slider movement step)
   Suffix = "Speed",  -- Suffix text displayed (e.g., "Speed")
   CurrentValue = 50, -- Default value when the slider is initialized
   Flag = "SpeedSlider", -- Unique identifier for saving the value
   Callback = function(Value)
      print("Speed adjusted to:", Value)
   end,
})

--// Input Field Example
SettingsTab:CreateInput({
   Name = "Enter Username",
   PlaceholderText = "Type here...",
   RemoveTextAfterFocusLost = true, -- Remove text when focus is lost
   Callback = function(Text)
      print("User entered:", Text)
   end,
})

--// Keybind Example
SettingsTab:CreateKeybind({
   Name = "Toggle Feature",
   CurrentKeybind = "P",  -- Default keybind
   HoldToInteract = false, -- Whether the keybind requires holding
   Flag = "Keybind1",  -- Unique identifier for saving the keybind
   Callback = function(Keybind)
      Rayfield:Notify({
         Title = "Keybind Pressed!",
         Content = "You pressed: " .. tostring(Keybind),
         Duration = 3
      })
   end,
})

--// Notification Example (on load)
Rayfield:Notify({
   Title = "Welcome to My Hub",
   Content = "Your custom Roblox Hub is now loaded!",
   Duration = 5
})

--// More Features (for example, loading game-specific scripts based on game ID)
local GameId = game.PlaceId
if GameId == 2753915549 then -- Blox Fruits game ID
   loadstring(game:HttpGet("https://raw.githubusercontent.com/siinject/scripts/main/bloxfruits.lua"))()
elseif GameId == 6403373529 then -- BedWars game ID
   loadstring(game:HttpGet("https://raw.githubusercontent.com/siinject/scripts/main/bedwars.lua"))()
else
   Rayfield:Notify({
      Title = "Game Not Supported",
      Content = "This game is not currently supported by this hub.",
      Duration = 4
   })
end
